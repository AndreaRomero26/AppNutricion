<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_2logos"
    tools:context=".firstapp.paciente.SeguimientoActivity">

    <Button
        android:id="@+id/btnRegistrarP"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:backgroundTint="#D9D9D9"
        android:fontFamily="@font/lexend"
        android:gravity="bottom|center"
        android:text="Registrar progreso"
        android:textColor="#000000"
        android:textSize="32dp"
        app:cornerRadius="50dp"
        app:icon="@drawable/registrarprogreso"
        app:iconGravity="textTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.24"
        app:layout_constraintVertical_bias="0.60" />

    <Button
        android:id="@+id/btnMostrarP"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:backgroundTint="#D9D9D9"
        android:fontFamily="@font/lexend"
        android:gravity="bottom|center"
        android:text="Mostrar progreso"
        android:textColor="#000000"
        android:textSize="32dp"
        app:cornerRadius="50dp"
        app:icon="@drawable/mostrarprogreso"
        app:iconGravity="textTop"
        app:layout_constraintBottom_toBottomOf="@+id/btnRegistrarP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnRegistrarP"
        app:layout_constraintVertical_bias="0.0"
        />

</androidx.constraintlayout.widget.ConstraintLayout>