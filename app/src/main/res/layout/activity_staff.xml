<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_2logos"
    tools:context=".firstapp.StaffActivity">

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:backgroundTint="#D9D9D9"
        android:fontFamily="@font/lexend"
        android:gravity="bottom|center"
        android:text="Editar expediente"
        android:textColor="#000000"
        android:textSize="34dp"
        app:cornerRadius="50dp"
        app:icon="@drawable/editar"
        app:iconGravity="textTop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.60" />

    <Button
        android:id="@+id/btnExpedientes"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:backgroundTint="#D9D9D9"
        android:fontFamily="@font/lexend"
        android:gravity="bottom|center"
        android:text="Expedientes generados"
        android:textColor="#000000"
        android:textSize="32dp"
        app:cornerRadius="50dp"
        app:icon="@drawable/expedientes"
        app:iconGravity="textTop"
        app:layout_constraintBottom_toBottomOf="@+id/btnEditar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnEditar"
        app:layout_constraintHorizontal_bias="0.8"/>

</androidx.constraintlayout.widget.ConstraintLayout>